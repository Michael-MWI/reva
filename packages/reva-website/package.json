{
  "name": "reva-website",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "10",
    "node": "22"
  },
  "scripts": {
    "predev": "react-dsfr update-icons && graphql-codegen --config codegen.ts",
    "dev": "next dev -p 3002",
    "prebuild": "react-dsfr update-icons && node ./src/scripts/generateRobotsTxt.js && npm i --include=dev --prefix ../reva-api && npm run graphql:generate --prefix ../reva-api && npm run graphql:generate",
    "build": "next build && node copy-assets.js",
    "start": "node .next/standalone/server.js",
    "lint": "next lint",
    "graphql:generate": "graphql-codegen --config codegen.ts",
    "graphql:watch": "graphql-codegen --config codegen.ts --watch",
    "cypress:open": "cypress open",
    "cypress:ci": "cypress run",
    "test:ci": "start-server-and-test 'PORT=3002 node .next/standalone/server.js' http://localhost:3002 cypress:ci"
  },
  "dependencies": {
    "@codegouvfr/react-dsfr": "^1.23.4",
    "@hookform/resolvers": "^4.1.3",
    "@strapi/blocks-react-renderer": "^1.0.2",
    "@tanstack/react-query": "^5.80.6",
    "graphql-request": "^7.2.0",
    "lodash": "^4.17.21",
    "next": "^15.3.3",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.57.0",
    "react-hot-toast": "^2.5.2",
    "sharp": "^0.34.2",
    "urql": "^4.2.2",
    "use-debounce": "^10.0.4",
    "zod": "^3.25.51",
    "zustand": "^5.0.5"
  },
  "importSort": {
    ".js, .ts, .jsx, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/client-preset": "^4.8.2",
    "@parcel/watcher": "^2.5.1",
    "@playwright/test": "^1.52.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10",
    "cypress": "^14.4.1",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "postcss": "^8",
    "postcss-import": "^16.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.5.3",
    "sass": "^1.89.1",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3"
  }
}
