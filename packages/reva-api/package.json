{
  "name": "reva-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e ts,json,graphql -w . ./index.ts | npx pino-pretty",
    "build": "npm run prisma:generate && npm run build:ts && npm run build:graphql",
    "build:ts": "rimraf ./dist && tsc -p tsconfig.json",
    "build:graphql": "npm run graphql:generate && rsync -R ./modules/*.graphql ./dist && rsync -R ./modules/**/*.graphql ./dist && rsync -R ./modules/**/**/*.graphql ./dist/modules ",
    "start": "npm run prisma:migrate:deploy && node dist/index.js",
    "start:server:only": "node dist/index.js",
    "pretest": "dotenv -e .env.test -- prisma generate",
    "test": "dotenv -e .env.test -- jest  -w 1 --testRegex='.*.test.ts$'",
    "testModule": "dotenv -e .env.test -- jest  -w 1",
    "graphql:generate": "tsx ./modules/generate-graphql-schema.ts",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:private-seed": "tsx prisma/seed/private-seed.ts",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate:migration": "prisma migrate dev --create-only",
    "cron": "npx tsx@4.7.0 infra/cron.ts",
    "cron-dev": "npx tsx@4.7.0 infra/cron.ts | npx pino-pretty",
    "lint-staged": "lint-staged",
    "lint-all": "prettier --write \"{domain,infra,modules}/**/*.{ts,md}\""
  },
  "prisma": {
    "seed": "npx tsx prisma/seed/seed.ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "all",
          "argsIgnorePattern": "^_",
          "caughtErrors": "all",
          "caughtErrorsIgnorePattern": "^_",
          "destructuredArrayIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ]
    }
  },
  "importSort": {
    ".js, .ts, .jsx, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "domain/**/*.{ts,md}": [
      "prettier --write"
    ],
    "infra/**/*.{ts,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.499.0",
    "@aws-sdk/s3-request-presigner": "^3.499.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/http-proxy": "^9.3.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/static": "^6.12.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.1",
    "@graphql-tools/resolvers-composition": "^7.0.0",
    "@graphql-tools/schema": "^10.0.2",
    "@keycloak/keycloak-admin-client": "^24.0.2",
    "@prisma/client": "^5.8.1",
    "@types/uuid": "^9.0.7",
    "basic-ftp": "^5.0.4",
    "cron": "^3.1.6",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.3.1",
    "debug": "^4.3.4",
    "dotenv": "^16.4.1",
    "fast-csv": "^5.0.0",
    "fastify": "^4.25.2",
    "fastify-env": "2.1.1",
    "graphql-scalars": "^1.22.4",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^24.0.2",
    "lodash": "^4.17.21",
    "mercurius": "^13.3.3",
    "mercurius-upload": "^7.0.0",
    "mjml": "^4.14.1",
    "pino": "^8.17.2",
    "pino-datadog-transport": "^1.3.2",
    "purify-ts": "^2.0.3",
    "sib-api-v3-sdk": "^8.4.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cron": "^2.0.1",
    "@types/crypto-js": "^4.2.2",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/mjml": "^4.7.4",
    "@types/node": "^20.11.6",
    "@types/ssh2-sftp-client": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "import-sort-style-module": "^6.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.4",
    "prettier-plugin-import-sort": "^0.0.7",
    "prisma": "^5.8.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
