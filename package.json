{
  "name": "reva",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "npm": "8",
    "node": "16"
  },
  "scripts": {
    "build": "./build.sh",
    "dev": "concurrently -n \"rev-api,reva-website,reva-app\" -c \"blue,green,cyan\" -k \"npm run dev -w reva-api\" \"npm run dev -w reva-website\" \"npm run dev -w reva-app\"",
    "start": "npm run start --workspace=reva-api"
  },
  "workspaces": [
    "packages/reva-api",
    "packages/reva-website",
    "packages/reva-app",
    "packages/reva-mobile"
  ],
  "devDependencies": {
    "@parcel/transformer-elm": "^2.2.1",
    "concurrently": "^7.0.0",
    "elm": "^0.19.1-5",
    "elm-format": "^0.8.5",
    "reva-mobile": "file:packages/reva-mobile"
  }
}
