{
  "name": "reva",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "npm": "10",
    "node": "20"
  },
  "scripts": {
    "build": "./build.sh",
    "dev": "npm-run-all --print-label --parallel \"dev -w reva-api\" \"dev --prefix packages/reva-candidate\" \"dev --prefix packages/reva-admin-react\" \"dev --prefix packages/reva-website\"",
    "front-apps": "npm-run-all --print-label --parallel \"dev --prefix packages/reva-candidate\" \"dev --prefix packages/reva-admin-react\" \"dev --prefix packages/reva-website\"",
    "start": "npm run start --workspace=reva-api",
    "cron": "npm run cron --workspace=reva-api",
    "lint": "npm-run-all --print-label --parallel \"lint -w reva-api\" \"lint --prefix packages/reva-candidate\" \"lint --prefix packages/reva-admin-react\" \"lint --prefix packages/reva-website\"",
    "test-api": "npm run test --workspace=reva-api",
    "deploy": "./infra/scripts/deploy.sh",
    "graphql:generate": "npm run graphql:generate --workspace=reva-api && npm run graphql:generate --prefix packages/reva-admin-react && npm run graphql:generate --prefix packages/reva-candidate",
    "prisma:generate": "npm run prisma:generate --workspace=reva-api",
    "prisma:migrate:deploy": "npm run prisma:migrate:deploy --workspace=reva-api",
    "prepare": "husky"
  },
  "workspaces": [
    "packages/reva-api"
  ],
  "devDependencies": {
    "dotenv": "^16.4.5",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5"
  }
}
